{
  "pages": [
    "pages/index/index",
    "pages/forum/forum",
    "pages/ai/ai",
    "pages/message/message",
    "pages/user/user",
    "pages/viewForum/viewForum",
    "pages/login/login",
    "pages/register/register",
    "pages/compass/compass",
    "pages/map/map"
  ],
  "usingComponents": {
    "van-button": "@vant/weapp/button/index",
    "van-field": "@vant/weapp/field/index",
    "van-icon": "@vant/weapp/icon/index",
    "van-image": "@vant/weapp/image/index",
    "van-popup": "@vant/weapp/popup/index",
    "van-tab": "@vant/weapp/tab/index",
    "van-tabs": "@vant/weapp/tabs/index",
    "van-calendar": "@vant/weapp/calendar/index",
    "van-empty": "@vant/weapp/empty/index",
    "van-dialog": "@vant/weapp/dialog/index",
    "van-switch": "@vant/weapp/switch/index",
    "van-radio": "@vant/weapp/radio/index",
    "van-radio-group": "@vant/weapp/radio-group/index"
  },
  "window": {
    "backgroundTextStyle": "dark",
    "navigationBarTextStyle": "white",
    "navigationBarBackgroundColor": "#3578f6",
    "navigationBarTitleText": "智会通",
    "enablePullDownRefresh": true,
    "backgroundColor": "#efefef",
    "onReachBottomDistance": 60
  },
  "tabBar": {
    "selectedColor": "#3578f6",
    "color": "#79869f",
    "list": [{
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "/images/tabbar/icon/home.png",
        "selectedIconPath": "/images/tabbar/icon-fill/home.png"
      },
      {
        "pagePath": "pages/forum/forum",
        "text": "论坛",
        "iconPath": "/images/tabbar/icon/forum.png",
        "selectedIconPath": "/images/tabbar/icon-fill/forum.png"
      },
      {
        "pagePath": "pages/ai/ai",
        "text": "智通精灵",
        "iconPath": "/images/tabbar/icon/ai.png",
        "selectedIconPath": "/images/tabbar/icon-fill/ai.png"
      },
      {
        "pagePath": "pages/message/message",
        "text": "消息",
        "iconPath": "/images/tabbar/icon/message.png",
        "selectedIconPath": "/images/tabbar/icon-fill/message.png"
      },
      {
        "pagePath": "pages/user/user",
        "text": "个人中心",
        "iconPath": "/images/tabbar/icon/user.png",
        "selectedIconPath": "/images/tabbar/icon-fill/user.png"
      }
    ]
  },

  "requiredPrivateInfos": ["getLocation", "chooseLocation"],
  "permission": {
    "scope.userLocation": {
      "desc": "初始化时获取用户的位置信息用于外出定位"
    }
  },
  "rendererOptions": {},
  "componentFramework": "glass-easel",
  "sitemapLocation": "sitemap.json",
  "lazyCodeLoading": "requiredComponents"
}